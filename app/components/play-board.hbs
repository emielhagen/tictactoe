  </div>
  <div class="square" {{action 'markX' 'five'}}>
    <h2 class="square-text">{{five}}</h2>
  </div>
  <div class="square" {{action 'markX' 'six'}}>
    <h2 class="square-text">{{six}}</h2>
  </div>
  <div class="square" {{action 'markX' 'seven'}}>
    <h2 class="square-text">{{seven}}</h2>
  </div>
  <div class="square" {{action 'markX' 'eight'}}>
