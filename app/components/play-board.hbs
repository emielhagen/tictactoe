<div class="banner">
  <div class="dark-stroke"></div>
  <div class="light-stroke">
    <div class="game-title">Tic Tac Toe</div>
    <div class="score">
      <h2> User score: {{userScore}} </h2>
      <h2> Computer score: {{computerScore}} </h2>
      <h2> Draw: {{drawScore}} </h2>
    </div>
  </div>
</div>

<div class="board">
  <div class="square" {{action 'markX' 'one'}}>
    <h2 class="square-text">{{one}}</h2>
  </div>
  <div class="square" {{action 'markX' 'two'}}>
    <h2 class="square-text">{{two}}</h2>
  </div>
  <div class="square" {{action 'markX' 'three'}}>
