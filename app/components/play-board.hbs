<div id="paper-dialog-tic">
  {{#if showDialogWithParent}}
    {{#paper-dialog class="flex-50" onClose=(action "closeDialogWithParent" "cancel") parent="#paper-dialog-tic" origin=dialogOrigin clickOutsideToClose=true}}
      <form>
        {{#paper-toolbar}}
          {{#paper-toolbar-tools}}
            <h2>{{winnerTitle}}</h2>
            <span class="flex"></span>
            {{#paper-button iconButton=true onClick=(action "closeDialogWithParent" "cancel")}}
              {{paper-icon icon="close"}}
            {{/paper-button}}
          {{/paper-toolbar-tools}}
        {{/paper-toolbar}}

        {{#paper-dialog-content}}
          <p>
            {{endingMessage}}
          </p>
        {{/paper-dialog-content}}

        {{#paper-dialog-actions class="layout-row"}}
          <span class="flex"></span>
          {{#paper-button onClick=(action "closeDialogWithParent" "cancel")}}
            Reset score
          {{/paper-button}}
          {{#paper-button onClick=(action "closeDialogWithParent" "ok")}}
            Continue
          {{/paper-button}}
        {{/paper-dialog-actions}}
      </form>
    {{/paper-dialog}}
  {{/if}}
</div>

<div class="banner">
  <div class="dark-stroke"></div>
  <div class="light-stroke">
    <div class="game-title">Tic Tac Toe</div>
    <div class="score">
      <h2> User score: {{userScore}} </h2>
      <h2> Computer score: {{computerScore}} </h2>
      <h2> Draw: {{drawScore}} </h2>
    </div>
  </div>
</div>

